%html
  %head
    %title
      = "Who's In?"
    %link{:rel => "stylesheet", :type => "text/css", :href => "whos-in.css"}
  %body
    #content
      %h1#header "Who's In?"

      %form.add{:action => "/add", :method => "POST"}
        %input.entry{:id => "name", :name => "name", :type => "text"}
        %input.button{:value => "I'm in", :type => "submit"}

      #count
        Current Total: #{@attending.count}

      %ul#attendees
        - for attendee in @attending
          %li.attendee
            %form.delete{:action => "/delete", :method => "POST"}
              %input{:name => "id", :value => "#{attendee.id}", :type => "hidden"}
              %input.X{:value => "X", :type => "submit"}
            %span.name
              = attendee.name
            %span.timestamp
              = attendee.timestamp.strftime('%I:%M%p')

    #footer
      Delete responsibly.

